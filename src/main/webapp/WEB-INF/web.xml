<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	id="WebApp_ID" version="2.5">
	<display-name>Vaadin Web Application</display-name>
	<context-param>
		<description>Vaadin production mode</description>
		<param-name>productionMode</param-name>
		<param-value>true</param-value>
	</context-param>
	<servlet>
		<servlet-name>GermplasmBrowser</servlet-name>
		<servlet-class>com.vaadin.terminal.gwt.server.ApplicationServlet</servlet-class>
		<init-param>
			<description>GermplasmBrowser application class to start</description>
			<param-name>application</param-name>
			<param-value>org.generationcp.browser.application.GermplasmBrowserOnlyApplication</param-value>
		</init-param>
	</servlet>
	<servlet-mapping>
		<servlet-name>GermplasmBrowser</servlet-name>
		<url-pattern>/germplasm/*</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>StudyBrowser</servlet-name>
		<servlet-class>com.vaadin.terminal.gwt.server.ApplicationServlet</servlet-class>
		<init-param>
			<description>GermplasmBrowser application class to start</description>
			<param-name>application</param-name>
			<param-value>org.generationcp.browser.application.GermplasmStudyBrowserApplication</param-value>
		</init-param>
	</servlet>
	<servlet-mapping>
		<servlet-name>StudyBrowser</servlet-name>
		<url-pattern>/study/*</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>GermplasmBrowser</servlet-name>
		<url-pattern>/VAADIN/*</url-pattern>
	</servlet-mapping>
</web-app>